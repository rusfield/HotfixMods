@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.Razor.Components.Elements

<MudGrid>
    <MudItem xs="3" Class="@gridItemCssClass">
        <IntInput_Element Label="Head" @bind-Value="Creature.HeadItemDisplayInfoId" ValueLookup="@CreatureLookup?.HeadItemDisplayInfoId"/>
        <IntInput_Element Label="Shoulders" @bind-Value="Creature.ShouldersItemDisplayInfoId" ValueLookup="@CreatureLookup?.ShouldersItemDisplayInfoId"/>
        <IntInput_Element Label="Chest" @bind-Value="Creature.ChestItemDisplayInfoId" ValueLookup="@CreatureLookup?.ChestItemDisplayInfoId"/>
        <IntInput_Element Label="Hands" @bind-Value="Creature.HandsItemDisplayInfoId" ValueLookup="@CreatureLookup?.HandsItemDisplayInfoId"/>
        <IntInput_Element Label="Legs" @bind-Value="Creature.LegsItemDisplayInfoId" ValueLookup="@CreatureLookup?.LegsItemDisplayInfoId"/>
        <IntInput_Element Label="Feet" @bind-Value="Creature.FeetItemDisplayInfoId" ValueLookup="@CreatureLookup?.FeetItemDisplayInfoId"/>
    </MudItem>
    <MudItem xs="6" Class="@gridItemCssClass" Style="@($"background-position:center; background-repeat:no-repeat; background-size:auto 100%; background-image:url('images/creatures/portraits/{Creature.Gender.ToString().ToLower()}/{Creature.Race.ToString().ToLower().Replace("_","")}.png')")">
        @* BG *@
    </MudItem>
    <MudItem xs="3" Class="@gridItemCssClass">
        <IntInput_Element Label="Back" @bind-Value="Creature.BackItemDisplayInfoId" ValueLookup="@CreatureLookup?.BackItemDisplayInfoId"/>
        <IntInput_Element Label="Tabard" @bind-Value="Creature.TabardItemDisplayInfoId" ValueLookup="@CreatureLookup?.TabardItemDisplayInfoId"/>
        <IntInput_Element Label="Shirt" @bind-Value="Creature.ShirtItemDisplayInfoId" ValueLookup="@CreatureLookup?.ShirtItemDisplayInfoId"/>
        <IntInput_Element Label="Waist" @bind-Value="Creature.WaistItemDisplayInfoId" ValueLookup="@CreatureLookup?.WaistItemDisplayInfoId"/>
        <IntInput_Element Label="Wrists" @bind-Value="Creature.WristsItemDisplayInfoId" ValueLookup="@CreatureLookup?.WristsItemDisplayInfoId"/>
        <IntInput_Element Label="Quiver" @bind-Value="Creature.QuiverItemDisplayInfoId" ValueLookup="@CreatureLookup?.QuiverItemDisplayInfoId"/>
    </MudItem>

    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Main Hand" @bind-Value="Creature.MainHandItemId" ValueLookup="@CreatureLookup?.MainHandItemId"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Off Hand" @bind-Value="Creature.OffHandItemId" ValueLookup="@CreatureLookup?.OffHandItemId"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Ranged" @bind-Value="Creature.RangedItemId" ValueLookup="@CreatureLookup?.RangedItemId"/>
    </MudItem>

    <MudItem xs="1" Class="@gridItemCssClass" />
    <MudItem xs="1" Class="@gridItemCssClass">
        <IntInput_Element Label="Mod" @bind-Value="Creature.MainHandItemAppearanceModifierId" ValueLookup="@CreatureLookup?.MainHandItemAppearanceModifierId"Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="1" Class="@gridItemCssClass">
        <IntInput_Element Label="Visual" @bind-Value="Creature.MainHandItemVisual" ValueLookup="@CreatureLookup?.MainHandItemVisual"Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="2" Class="@gridItemCssClass" />
    <MudItem xs="1" Class="@gridItemCssClass">
        <IntInput_Element Label="Mod" @bind-Value="Creature.OffHandItemAppearanceModifierId" ValueLookup="@CreatureLookup?.OffHandItemAppearanceModifierId"Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="1" Class="@gridItemCssClass">
        <IntInput_Element Label="Visual" @bind-Value="Creature.OffHandItemVisual" ValueLookup="@CreatureLookup?.OffHandItemVisual"Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="2" Class="@gridItemCssClass" />
    <MudItem xs="1" Class="@gridItemCssClass">
        <IntInput_Element Label="Mod" @bind-Value="Creature.RangedItemAppearanceModifierId" ValueLookup="@CreatureLookup?.RangedItemAppearanceModifierId"Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="1" Class="@gridItemCssClass">
        <IntInput_Element Label="Visual" @bind-Value="Creature.RangedItemVisual" ValueLookup="@CreatureLookup?.RangedItemVisual"Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="1" Class="@gridItemCssClass" />


</MudGrid>


@code
{
    [Parameter]
    public CreatureDto Creature { get; set; }

    [Parameter]
    public CreatureDto? CreatureLookup { get; set; }

    
    string gridItemCssClass = "pb-0 pt-0";
}
