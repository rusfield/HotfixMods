@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.Razor.Components.Elements

<MudGrid>
    <MudItem xs="3" Class="@gridItemCssClass">
        <MudStack>
            <IntInput_Element Label="Head" @bind-Value="Creature.HeadItemDisplayInfoId" ValueLookup="@CreatureLookup?.HeadItemDisplayInfoId" CssClass="@elementCssClass" />
            <IntInput_Element Label="Shoulders" @bind-Value="Creature.ShouldersItemDisplayInfoId" ValueLookup="@CreatureLookup?.ShouldersItemDisplayInfoId" CssClass="@elementCssClass" />
            <IntInput_Element Label="Chest" @bind-Value="Creature.ChestItemDisplayInfoId" ValueLookup="@CreatureLookup?.ChestItemDisplayInfoId" CssClass="@elementCssClass" />
            <IntInput_Element Label="Hands" @bind-Value="Creature.HandsItemDisplayInfoId" ValueLookup="@CreatureLookup?.HandsItemDisplayInfoId" CssClass="@elementCssClass" />
            <IntInput_Element Label="Legs" @bind-Value="Creature.LegsItemDisplayInfoId" ValueLookup="@CreatureLookup?.LegsItemDisplayInfoId" CssClass="@elementCssClass" />
            <IntInput_Element Label="Feet" @bind-Value="Creature.FeetItemDisplayInfoId" ValueLookup="@CreatureLookup?.FeetItemDisplayInfoId" CssClass="@elementCssClass" />
        </MudStack>
    </MudItem>
    <MudItem xs="6" Class="@gridItemCssClass">
        @* BG *@
    </MudItem>
    <MudItem xs="3" Class="@gridItemCssClass">
        <IntInput_Element Label="Back" @bind-Value="Creature.BackItemDisplayInfoId" ValueLookup="@CreatureLookup?.BackItemDisplayInfoId" CssClass="@elementCssClass" />
        <IntInput_Element Label="Tabard" @bind-Value="Creature.TabardItemDisplayInfoId" ValueLookup="@CreatureLookup?.TabardItemDisplayInfoId" CssClass="@elementCssClass" />
        <IntInput_Element Label="Shirt" @bind-Value="Creature.ShirtItemDisplayInfoId" ValueLookup="@CreatureLookup?.ShirtItemDisplayInfoId" CssClass="@elementCssClass" />
        <IntInput_Element Label="Waist" @bind-Value="Creature.WaistItemDisplayInfoId" ValueLookup="@CreatureLookup?.WaistItemDisplayInfoId" CssClass="@elementCssClass" />
        <IntInput_Element Label="Wrists" @bind-Value="Creature.WristsItemDisplayInfoId" ValueLookup="@CreatureLookup?.WristsItemDisplayInfoId" CssClass="@elementCssClass" />
        <IntInput_Element Label="Quiver" @bind-Value="Creature.QuiverItemDisplayInfoId" ValueLookup="@CreatureLookup?.QuiverItemDisplayInfoId" CssClass="@elementCssClass" />
    </MudItem>



</MudGrid>


@code
{
    [Parameter]
    public CreatureDto Creature { get; set; }

    [Parameter]
    public CreatureDto? CreatureLookup { get; set; }

    string elementCssClass = "pb-2 pt-2";
    string gridItemCssClass = "pb-0 pt-0";
}
