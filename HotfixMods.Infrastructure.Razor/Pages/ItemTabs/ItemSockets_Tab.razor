@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.Blazor.Components.Elements

<MudGrid>
    <MudItem xs="4" Class="@gridItemCssClass">
        <SingleSelect_Element Label="Socket Slot 0" @bind-Value="Item.SocketType0" ValueLookup="ItemLookup?.SocketType0"/>
        <SingleSelect_Element Label="Socket Slot 1" @bind-Value="Item.SocketType1" ValueLookup="ItemLookup?.SocketType1"/>
        <SingleSelect_Element Label="Socket Slot 2" @bind-Value="Item.SocketType2" ValueLookup="ItemLookup?.SocketType2"/>
        <Invisible_Element/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass" />
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Socket Match Enchantment ID" @bind-Value="Item.SocketMatchEnchantmentId" ValueLookup="ItemLookup?.SocketMatchEnchantmentId"/>
    </MudItem>
</MudGrid>


@code {
    [Parameter]
    public ItemDto Item { get; set; }

    [Parameter]
    public ItemDto? ItemLookup { get; set; }

    
    string gridItemCssClass = "pb-0 pt-0";
}