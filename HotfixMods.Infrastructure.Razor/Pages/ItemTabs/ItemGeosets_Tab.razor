@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.Razor.Components.Elements

<MudGrid>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Group 0" @bind-Value="Item.GeosetGroup0" ValueLookup="@ItemLookup?.GeosetGroup0"/>
        <IntInput_Element Label="Group 1" @bind-Value="Item.GeosetGroup1" ValueLookup="@ItemLookup?.GeosetGroup1"/>
        <IntInput_Element Label="Group 2" @bind-Value="Item.GeosetGroup2" ValueLookup="@ItemLookup?.GeosetGroup2"/>
        <IntInput_Element Label="Group 3" @bind-Value="Item.GeosetGroup3" ValueLookup="@ItemLookup?.GeosetGroup3"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass" />
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Attachment 0" @bind-Value="Item.GeosetGroupAttachment0" ValueLookup="@ItemLookup?.GeosetGroupAttachment0"/>
        <IntInput_Element Label="Attachment 1" @bind-Value="Item.GeosetGroupAttachment1" ValueLookup="@ItemLookup?.GeosetGroupAttachment1"/>
        <IntInput_Element Label="Attachment 2" @bind-Value="Item.GeosetGroupAttachment2" ValueLookup="@ItemLookup?.GeosetGroupAttachment2"/>
        <IntInput_Element Label="Attachment 3" @bind-Value="Item.GeosetGroupAttachment3" ValueLookup="@ItemLookup?.GeosetGroupAttachment3"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Group 4" @bind-Value="Item.GeosetGroup4" ValueLookup="@ItemLookup?.GeosetGroup4"/>
        <IntInput_Element Label="Group 5" @bind-Value="Item.GeosetGroup5" ValueLookup="@ItemLookup?.GeosetGroup5"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Model Type 0" @bind-Value="Item.ModelType0" ValueLookup="@ItemLookup?.ModelType0"/>
        <IntInput_Element Label="Model Type 1" @bind-Value="Item.ModelType1" ValueLookup="@ItemLookup?.ModelType1"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Attachment 4" @bind-Value="Item.GeosetGroupAttachment4" ValueLookup="@ItemLookup?.GeosetGroupAttachment4"/>
        <IntInput_Element Label="Attachment 5" @bind-Value="Item.GeosetGroupAttachment5" ValueLookup="@ItemLookup?.GeosetGroupAttachment5"/>
    </MudItem>


    @* TODO: If helmet? *@
    @if (true)
    {
        <MudItem xs="2" Class="@gridItemCssClass" />
        <MudItem xs="4" Class="@gridItemCssClass">
            <IntInput_Element Label="Helmet Vis 0" @bind-Value="Item.HelmetGeosetVis0" ValueLookup="@ItemLookup?.HelmetGeosetVis0"/>
        </MudItem>
        <MudItem xs="4" Class="@gridItemCssClass">
            <IntInput_Element Label="Helmet Vis 1" @bind-Value="Item.HelmetGeosetVis1" ValueLookup="@ItemLookup?.HelmetGeosetVis1"/>
        </MudItem>
        <MudItem xs="2" Class="@gridItemCssClass" />
    }

</MudGrid>


@code {
    [Parameter]
    public ItemDto Item { get; set; }

    [Parameter]
    public ItemDto? ItemLookup { get; set; }

    
    string gridItemCssClass = "pb-0 pt-0";
}