@using HotfixMods.Core.Enums
@using HotfixMods.Core.Flags
@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.Blazor.Components.Elements

<MudGrid>
    <MudItem xs="3" Class="@gridItemCssClass">
        <IntInput_Element Label="Icon ID" @bind-Value="Spell.SpellIconFileDataId" ValueLookup="SpellLookup?.SpellIconFileDataId"/>
        <SingleSelect_Element Label="Power Type" @bind-Value="Spell.PowerType" ValueLookup="SpellLookup?.PowerType"/>
        <IntInput_Element Label="Power Cost (Value)" @bind-Value="Spell.ManaCost" ValueLookup="SpellLookup?.ManaCost"/>
        <DecimalInput_Element Label="Power Cost (Percentage)" @bind-Value="Spell.PowerCostPct" ValueLookup="SpellLookup?.PowerCostPct"/>
    </MudItem>
    <MudItem xs="6" Class="@gridItemCssClass">
    </MudItem>
    <MudItem xs="3" Class="@gridItemCssClass">
        <IntInput_Element Label="Casting Time ID" @bind-Value="Spell.CastingTimeIndex" ValueLookup="SpellLookup?.CastingTimeIndex"/>
        <IntInput_Element Label="Range ID" @bind-Value="Spell.RangeIndex" ValueLookup="SpellLookup?.RangeIndex"/>
        <IntInput_Element Label="Duration ID" @bind-Value="Spell.DurationIndex" ValueLookup="SpellLookup?.DurationIndex"/>
        <IntInput_Element Label="Required Aura ID" @bind-Value="Spell.ManaCost" ValueLookup="SpellLookup?.ManaCost"/>
    </MudItem>
    <MudItem xs="3" Class="@gridItemCssClass">
        <MultiSelect_Element T="@DamageClassFlags" Label="Categories" @bind-Value="Spell.SchoolMask" ValueLookup="SpellLookup?.SchoolMask"/>
    </MudItem>
    <MudItem xs="6" Class="@gridItemCssClass">
        <TextInput_Element Label="Name" Variant="Variant.Text" @bind-Value="@Spell.HotfixModsName" ValueLookup="@SpellLookup?.HotfixModsName"/>
    </MudItem>
    <MudItem xs="3" Class="@gridItemCssClass">
        <IntInput_Element Label="Stacks" @bind-Value="Spell.CumulativeAura" ValueLookup="SpellLookup?.CumulativeAura"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass" />
    <MudItem xs="4" Class="@gridItemCssClass">
        <TextInput_Element Label="Description" Variant="Variant.Text" @bind-Value="@Spell.AuraDescription" ValueLookup="@SpellLookup?.AuraDescription"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass" />
</MudGrid>

@code {
    [Parameter]
    public SpellDto Spell { get; set; }

    [Parameter]
    public SpellDto? SpellLookup { get; set; }

    
    string gridItemCssClass = "pb-0 pt-0";
}