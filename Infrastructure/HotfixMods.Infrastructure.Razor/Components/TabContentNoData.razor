@if (IncludeCarousel)
{
    <MudCarouselItem Transition="TransitionHandler.Transition" CustomTransitionEnter="@TransitionHandler.EnterTransition" CustomTransitionExit="@TransitionHandler.ExitTransition">
        <MudStack Justify="justify" AlignItems="alignItems" Style="height:100%;width:100%;">
            <MudText>@Text</MudText>
        </MudStack>
    </MudCarouselItem>
}
else
{
    <MudStack Justify="justify" AlignItems="alignItems" Style="height:100%;width:100%;">
        <MudText>@Text</MudText>
    </MudStack>
}

@code {

    [Parameter]
    public bool IncludeCarousel { get; set; } = true;

    [Parameter]
    public string Text { get; set; } = "There are no data yet.";

    Justify justify = Justify.Center;
    AlignItems alignItems = AlignItems.Center;

}
