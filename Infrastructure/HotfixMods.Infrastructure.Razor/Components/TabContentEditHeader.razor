<MudStack Row="true" Justify="Justify.SpaceBetween" Class="mb-2">
    <MudStack Row="true">
        <MudButton Variant="Variant.Outlined" Color="Color.Info" OnClick="ValueLookupCallback">Lookup</MudButton>
    </MudStack>
    <MudStack Row="true">
        <MudButton Variant="Variant.Outlined" Color="Color.Success">
            123
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success">
            @(IsUpdate ? "Update" : "Save")
        </MudButton>
    </MudStack>
</MudStack>
<MudTabs Elevation="4" Rounded="true" Centered="true" Color="@Color.Primary" PanelClass="mt-n2 mx-2">
    <ChildContent>
        @ChildContent
    </ChildContent>

    <Header>
        @if (AddClick_Callback != null)
        {
            <MudTooltip Text="@AddTooltip">
                <MudIconButton Icon="@Icons.Filled.Add" Style="color:white" OnClick="AddClick_Callback" />
            </MudTooltip>
        }
    </Header>
</MudTabs>

@code {
    [Parameter]
    public Action ValueLookupCallback { get; set; }

    [Parameter]
    public bool IsUpdate { get; set; }

    [Parameter]
    public Action? AddClick_Callback { get; set; }

    [Parameter]
    public string? AddTooltip { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}