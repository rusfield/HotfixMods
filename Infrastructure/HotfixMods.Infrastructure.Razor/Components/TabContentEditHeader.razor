<MudGrid Class="mb-2 px-3">
        <MudItem xs="4">
        <MudStack Row="true" Justify="Justify.FlexStart">
            <MudButton Variant="Variant.Outlined" Color="Color.Info" OnClick="ValueCompare_Callback">Compare</MudButton>
        </MudStack>
    </MudItem>
    <MudItem xs="4">
        <MudText Typo="Typo.h4" Align="Align.Center" Style="width:100%">
            @(Title)
        </MudText>
    </MudItem>
    <MudItem xs="4">
        <MudStack Row="true" Justify="Justify.FlexEnd">
            <MudButton Variant="Variant.Filled" Color="Color.Success">
                @(IsUpdate ? "Update" : "Save")
            </MudButton>
        </MudStack>
    </MudItem>
</MudGrid>

<MudTabs Elevation="4" Rounded="true" Centered="true" Color="@Color.Primary" PanelClass="rounded-0 mud-elevation-0" Class="tab-bar">
    <ChildContent>
        @ChildContent
    </ChildContent>
</MudTabs>


@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public EventCallback ValueCompare_Callback { get; set; }

    [Parameter]
    public bool IsUpdate { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}