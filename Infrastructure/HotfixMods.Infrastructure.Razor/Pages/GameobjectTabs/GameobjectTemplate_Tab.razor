@using HotfixMods.Infrastructure.Extensions
@using HotfixMods.Infrastructure.InfoModels
@inherits HotfixPageTabBase<GameobjectTemplate>

<MudCarouselItem Transition="TransitionHandler.Transition" CustomTransitionEnter="@TransitionHandler.EnterTransition" CustomTransitionExit="@TransitionHandler.ExitTransition">
    <MudGrid>
        <MudItem xs="3">
            <Input_Element T="byte" @bind-Value="@(Value.Type)" Label="@(nameof(Value.Type).ToDisplayName())" ValueCompare="ValueCompare?.Type" />
            <Input_Element T="decimal" @bind-Value="@(Value.Size)" Label="@(nameof(Value.Size).ToDisplayName())" ValueCompare="ValueCompare?.Size" />
            <Input_Element T="string" @bind-Value="@(Value.IconName)" Label="@(nameof(Value.IconName).ToDisplayName())" ValueCompare="ValueCompare?.IconName" />
        </MudItem>
        <MudItem xs="6">
            <Placeholder_Element Amount="4" />
            <Input_Element T="string" Value="Value.Name" Label="@nameof(Value.Name)" ValueCompare="ValueCompare?.Name" />
            <Input_Element T="string" Value="Value.CastBarCaption" Label="@nameof(Value.CastBarCaption)" Variant="Variant.Text" ValueCompare="ValueCompare?.Name" />
        </MudItem>
        <MudItem xs="3">
            <Input_Element T="string" @bind-Value="@(Value.AIName)" Label="@(nameof(Value.AIName).ToDisplayName())" ValueCompare="ValueCompare?.AIName" />
            <Input_Element T="string" @bind-Value="@(Value.ScriptName)" Label="@(nameof(Value.ScriptName).ToDisplayName())" ValueCompare="ValueCompare?.ScriptName" />
        </MudItem>
    </MudGrid>
</MudCarouselItem>