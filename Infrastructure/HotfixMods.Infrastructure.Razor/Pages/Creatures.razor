@using HotfixMods.Infrastructure.Razor.Pages.CreatureTabs
@using HotfixMods.Infrastructure.Razor.Pages.Shared

@inject CreatureService Service
@inherits HotfixPageBase

@if (null == PageTab.Dto)
{
    <TabContentView Data="new List<DashboardModel>()" New_Callback="NewAsync_Click<CreatureSearch_Dialog>" Title="Creatures">
    </TabContentView>
}
else
{
    <TabContentEditHeader IsUpdate="false" Title="Creatures" ValueCompare_Callback="@(async () => ValueCompareAsync_Click<CreatureSearch_Dialog>())">
        <ChildContent>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="HotfixMods" Line2="Entity" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object">
                        <HotfixModsEntity_Tab Value="((CreatureDto)PageTab.Dto).Entity" @bind-IsUpdate="((CreatureDto)PageTab.Dto).IsUpdate" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature" Line2="Template" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object" AmountOfPages="4" @bind-CurrentPage="currentCreatureTemplatePage">
                        <CreatureTemplate_Tab Value="((CreatureDto)PageTab.Dto).CreatureTemplate" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature" Line2="Template Addon" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object">
                        <CreatureTemplateAddon_Tab Value="((CreatureDto)PageTab.Dto).CreatureTemplateAddon" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature" Line2="Model Info" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object">
                        <CreatureModelInfo_Tab Value="((CreatureDto)PageTab.Dto).CreatureModelInfo" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature" Line2="Equip Template" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object">
                        <CreatureEquipTemplate_Tab Value="((CreatureDto)PageTab.Dto).CreatureEquipTemplate" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature" Line2="Display Info" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object" AmountOfPages="2" @bind-CurrentPage="currentDisplayInfoPage">
                        <CreatureDisplayInfo_Tab Value="((CreatureDto)PageTab.Dto).CreatureDisplayInfo" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature Display" Line2="Info Extra" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object">
                        <CreatureDisplayInfoExtra_Tab Value="((CreatureDto)PageTab.Dto).CreatureDisplayInfoExtra" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="Creature Display" Line2="Info Option" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object" AmountOfPages="amountOfCustomizationPages" CurrentPage="1">
                        <CreatureDisplayInfoOption_Tab @bind-ChrModelId="((CreatureDto)PageTab.Dto).ChrModelId" Values="((CreatureDto)PageTab.Dto).CreatureDisplayInfoOptions" CustomizationsChanged="SetAmountOfCustomizationPages" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
            <MudTabPanel Class="custom-mud-tabs">
                <TabContent>
                    <TabTitle_Element Line1="NPC Model Item" Line2="Slot Display Info" />
                </TabContent>
                <ChildContent>
                    <TabContentEditBody T="object">
                        <NpcModelItemSlotDisplayInfo_Tab Values="((CreatureDto)PageTab.Dto).NpcModelItemSlotDisplayInfos" />
                    </TabContentEditBody>
                </ChildContent>
            </MudTabPanel>
        </ChildContent>
    </TabContentEditHeader>
}

@code {
    int amountOfCustomizationPages = 0;
    int currentDisplayInfoPage = 1;
    int currentCreatureTemplatePage = 1;

    protected override void OnParametersSet()
    {
        
    }

    void SetAmountOfCustomizationPages(int pages)
    {
        amountOfCustomizationPages = pages;
        this.StateHasChanged();
    }
}