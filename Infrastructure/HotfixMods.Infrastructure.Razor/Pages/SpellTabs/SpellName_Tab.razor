@using HotfixMods.Infrastructure.Extensions;
@inherits HotfixPageTabBase<SpellName>
@inject SpellService Service
@inject IDialogService DialogService

<MudCarouselItem Transition="IsLoaded ? Transition.Slide : Transition.None">
    <MudGrid>
        <MudItem xs="3" />
        <MudItem xs="6">
            <Placeholder_Element Amount="4" />
            <Input_Element T="string" @bind-Value="Value.Name" ValueCompare="ValueCompare?.Name" Label="@nameof(Value.Name).ToDisplayName()" />
        </MudItem>
        <MudItem xs="3" />
    </MudGrid>
</MudCarouselItem>