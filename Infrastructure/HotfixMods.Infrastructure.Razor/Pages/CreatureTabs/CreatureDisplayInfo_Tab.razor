        </MudItem>
        <MudItem xs="3">
            <Input_Element T="int" @bind-Value="Value.TextureVariationFileDataID1" ValueCompare="ValueCompare?.TextureVariationFileDataID1" Label="@nameof(Value.TextureVariationFileDataID1).ToDisplayName()" />
