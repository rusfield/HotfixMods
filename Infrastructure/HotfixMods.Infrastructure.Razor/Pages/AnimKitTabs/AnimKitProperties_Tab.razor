@using HotfixMods.Core.Enums
@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.Razor.Components.Elements

<MudGrid>
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="One Shot Duration" @bind-Value="AnimKit.OneShotDuration" ValueLookup="AnimKitLookup?.OneShotDuration" />
        <IntInput_Element Label="One Shot Stop Anim Kit ID" @bind-Value="AnimKit.OneShotStopAnimKitId" ValueLookup="AnimKitLookup?.OneShotStopAnimKitId" />
        <Invisible_Element/>
        <Invisible_Element/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass">

    </MudItem>
    <MudItem xs="2" Class="@gridItemCssClass" />
    <MudItem xs="8" Class="@gridItemCssClass">
        <TextInput_Element Variant="Variant.Text" Label="Name" @bind-Value="@AnimKit.HotfixModsName" ValueLookup="@AnimKitLookup?.HotfixModsName"/>
    </MudItem>
    <MudItem xs="2" Class="@gridItemCssClass" />
</MudGrid>

@code {
    [Parameter]
    public AnimKitDto AnimKit { get; set; }

    [Parameter]
    public AnimKitDto? AnimKitLookup { get; set; }

    
    string gridItemCssClass = "pb-0 pt-0";
}