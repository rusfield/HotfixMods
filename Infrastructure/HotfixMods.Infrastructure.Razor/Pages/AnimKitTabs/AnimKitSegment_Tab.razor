    <MudItem xs="3">
        <IntInput_Element T="byte" Value="Value.OrderIndex" ValueChanged="SegmentChanged" Options="@(options)" Label="@(nameof(Value.OrderIndex).ToDisplayName())" AllowUndefinedValues="false"/>
        <IntInput_Element T="sbyte" @bind-Value="@(Value.LoopToSegmentIndex)" Label="@(nameof(Value.LoopToSegmentIndex).ToDisplayName())" ValueLookup="ValueLookup?.LoopToSegmentIndex" />
        <IntInput_Element T="ushort" @bind-Value="@(Value.AnimKitConfigId)" Label="@(nameof(Value.AnimKitConfigId).ToDisplayName())" ValueLookup="ValueLookup?.AnimKitConfigId" />
        <IntInput_Element T="ushort" @bind-Value="@(Value.SegmentFlags)" Label="@(nameof(Value.SegmentFlags).ToDisplayName())" ValueLookup="ValueLookup?.SegmentFlags" />
        <IntInput_Element T="int" @bind-Value="@(Value.OverrideConfigFlags)" Label="@(nameof(Value.OverrideConfigFlags).ToDisplayName())" ValueLookup="ValueLookup?.OverrideConfigFlags" />
        <IntInput_Element T="decimal" @bind-Value="@(Value.Field_9_0_1_34278_018)" Label="@(nameof(Value.Field_9_0_1_34278_018).ToDisplayName())" ValueLookup="ValueLookup?.Field_9_0_1_34278_018" />
    </MudItem>
    <MudItem xs="6">
        <Invisible_Element />
        <Invisible_Element />
        <Invisible_Element />
        <Invisible_Element />
        <InlineGroup>
            <LeftContent>
                <IntInput_Element T="byte" @bind-Value="@(Value.StartCondition)" Label="@(nameof(Value.StartCondition).ToDisplayName())" ValueLookup="ValueLookup?.StartCondition" />
            </LeftContent>
            <MiddleContent>
                <IntInput_Element T="byte" @bind-Value="@(Value.StartConditionParam)" Label="@(nameof(Value.StartConditionParam).ToDisplayName())" ValueLookup="ValueLookup?.StartConditionParam" />
            </MiddleContent>
            <RightContent>
                <IntInput_Element T="uint" @bind-Value="@(Value.StartConditionDelay)" Label="@(nameof(Value.StartConditionDelay).ToDisplayName(null, " (ms/frames? TODO)"))" ValueLookup="ValueLookup?.StartConditionDelay" />
            </RightContent>
        </InlineGroup>
        <InlineGroup>
            <LeftContent>
                <IntInput_Element T="byte" @bind-Value="@(Value.EndCondition)" Label="@(nameof(Value.EndCondition).ToDisplayName())" ValueLookup="ValueLookup?.EndCondition" />
            </LeftContent>
            <MiddleContent>
                <IntInput_Element T="uint" @bind-Value="@(Value.EndConditionParam)" Label="@(nameof(Value.EndConditionParam).ToDisplayName())" ValueLookup="ValueLookup?.EndConditionParam" />
            </MiddleContent>
            <RightContent>
                <IntInput_Element T="uint" @bind-Value="@(Value.EndConditionDelay)" Label="@(nameof(Value.EndConditionDelay).ToDisplayName(null, " (ms/frames? TODO)"))" ValueLookup="ValueLookup?.EndConditionDelay" />
            </RightContent>
        </InlineGroup>
