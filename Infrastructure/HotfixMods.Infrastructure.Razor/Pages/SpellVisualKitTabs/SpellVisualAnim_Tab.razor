@inherits HotfixPageTabBase<SpellVisualAnim>
@inject SpellVisualKitService Service
@inject IDialogService DialogService

<MudCarouselItem Transition="TransitionHandler.Transition" CustomTransitionEnter="@TransitionHandler.EnterTransition" CustomTransitionExit="@TransitionHandler.ExitTransition">
    <MudGrid>
        <MudItem xs="3" />
        <MudItem xs="6">
            <Placeholder_Element Amount="4" />
            <InlineGroup Merged="false" LeftContentWidth="20" RightContentWidth="20" MiddleContentWidth="60">
                <MiddleContent>
                    <Input_Element T="ushort" @bind-Value="Value.AnimKitId" ValueCompare="ValueCompare?.AnimKitId" Label="@nameof(Value.AnimKitId).ToDisplayName()" />
                </MiddleContent>
            </InlineGroup>
            <InlineGroup Merged="false">
                <LeftContent>
                    <Input_Element T="int" @bind-Value="Value.InitialAnimId" ValueCompare="ValueCompare?.InitialAnimId" Label="@nameof(Value.InitialAnimId).ToDisplayName()" />
                </LeftContent>
                <RightContent>
                    <Input_Element T="int" @bind-Value="Value.LoopAnimId" ValueCompare="ValueCompare?.LoopAnimId" Label="@nameof(Value.LoopAnimId).ToDisplayName()" />
                </RightContent>
            </InlineGroup>
        </MudItem>
        <MudItem xs="3" />
    </MudGrid>
</MudCarouselItem>