<MudCarousel Style="width:100%; height:640px" TData="object" ShowArrows="true" ShowBullets="false" AutoCycle="false" EnableSwipeGesture="false" SelectedIndexChanged="NavigatePage">
    <NextButtonTemplate>
        <MudIconButton Icon="@Icons.Material.Filled.NavigateNext" Color="Color.Primary" Class="@("custom-slide-navigator")" />
    </NextButtonTemplate>
    <PreviousButtonTemplate>
        <MudIconButton Icon="@Icons.Material.Filled.NavigateBefore" Color="Color.Primary" Class="@("custom-slide-navigator ")" />
    </PreviousButtonTemplate>
    <ChildContent>
        @ChildContent
    </ChildContent>
</MudCarousel>


@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public Transition Transition { get; set; }

    [Parameter]
    public EventCallback<Transition> TransitionChanged { get; set; }

    bool first = true;


    void NavigatePage(int newIndex)
    {
        if (first)
        {
            first = false;
        }
        else
        {
            Transition = Transition.Slide;
            TransitionChanged.InvokeAsync(Transition);
        }
        
    }
}