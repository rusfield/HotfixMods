@using HotfixMods.Infrastructure.DtoModels
@using HotfixMods.Infrastructure.DtoModels.Items
@using HotfixMods.Infrastructure.Razor.Components.Elements

<MudGrid>
    <MudItem xs="4" Class="@gridItemCssClass">
        <SingleSelect_Element Label="Trigger Type" @bind-Value="@ItemEffect.TriggerType" ValueLookup="@ItemEffectLookup?.TriggerType"/>
        <IntInput_Element Label="Spell ID" @bind-Value="@ItemEffect.SpellId" ValueLookup="@ItemEffectLookup?.SpellId"/>
        <IntInput_Element Label="Spell Category ID" @bind-Value="@ItemEffect.SpellCategoryId" ValueLookup="@ItemEffectLookup?.SpellCategoryId"/>
    </MudItem>
    <MudItem xs="4" Class="@gridItemCssClass" />
    <MudItem xs="4" Class="@gridItemCssClass">
        <IntInput_Element Label="Spell Cooldown (ms)" @bind-Value="@ItemEffect.CoolDownMSec" ValueLookup="@ItemEffectLookup?.CoolDownMSec"/>
        <IntInput_Element Label="Category Cooldown (ms)" @bind-Value="@ItemEffect.CategoryCoolDownMSec" ValueLookup="@ItemEffectLookup?.CategoryCoolDownMSec"/>
        <IntInput_Element Label="Charges" @bind-Value="@ItemEffect.Charges" ValueLookup="@ItemEffectLookup?.Charges"/>
    </MudItem>
</MudGrid>


@code {


    [Parameter]
    public ItemEffectDto ItemEffect { get; set; }

    [Parameter]
    public ItemEffectDto? ItemEffectLookup { get; set; }

    
    string gridItemCssClass = "pb-0 pt-0";
}